<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_14sdp"

    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">







    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_alignParentRight="true"

        android:layout_marginRight="@dimen/_60sdp"
        android:background="@drawable/chat_dark_gray"
        android:layout_height="wrap_content">



        <TextView

            android:layout_alignParentRight="true"
            android:id="@+id/txt_chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/appWhite"
            android:textSize="@dimen/_9sdp"

            android:layout_marginRight="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/my_regular"
            android:text="username"
            />

        <com.makeramen.roundedimageview.RoundedImageView

            android:id="@+id/img_chat_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_chat_username"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_90sdp"

            android:layout_marginBottom="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:src="@drawable/chatroom_bg2"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/_15sdp"
            app:riv_mutate_background="true"
            />



    </RelativeLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_chat_image"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:elevation="30dp"
        android:layout_alignParentRight="true"

        android:layout_gravity="right"

        android:scaleType="centerCrop"

        android:src="@drawable/img2"
        app:civ_border_width="2dp"


        />



</RelativeLayout>