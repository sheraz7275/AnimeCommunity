<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_14sdp"

    xmlns:app="http://schemas.android.com/apk/res-auto">







        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@drawable/chat_dark_gray"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_gravity="right"
                    android:id="@+id/txt_chat_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appWhite"
                    android:textSize="@dimen/_9sdp"

                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/my_regular"
                    android:text="username"
                    android:layout_marginLeft="@dimen/_18sdp"
                    />
                <TextView
                    android:id="@+id/txt_chat_content"
                    android:layout_width="wrap_content"

                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_height="wrap_content"
                    android:textColor="@color/appWhite"
                    android:fontFamily="@font/my_regular"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_8sdp"


                    android:text="officia Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt.."
                    android:layout_marginLeft="@dimen/_18sdp"
                    />

            </LinearLayout>





        </RelativeLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_chat_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:elevation="30dp"
            android:layout_alignParentRight="true"

            android:layout_gravity="right"

            android:scaleType="centerCrop"

            android:src="@drawable/img2"
            app:civ_border_width="2dp"


            />



</RelativeLayout>